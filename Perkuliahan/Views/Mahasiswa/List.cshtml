@{
}
@model List<Perkuliahan.Models.Entities.Mahasiswa>

<h1>Mahasiswa</h1>
<div class="m-3">
    <a class="btn btn-outline-success ms-3" asp-action="Add" asp-controller="Mahasiswa">Tambah Mahasiswa</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Nim</th>
            <th>Nama</th>
            <th>Tanggal Lahir</th>
            <th>Alamat</th>
            <th>Jenis Kelamin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mahasiswa in Model)
        {
          <tr>
              <td>@mahasiswa.Nim</td>
              <td>@mahasiswa.Nama_Mhs</td>
              <td>@mahasiswa.Tgl_lahir</td>
              <td>@mahasiswa.Alamat</td>
              <td>@mahasiswa.Jenis_Kelamin</td>
              <td>
                  <a class="btn btn-primary" asp-controller="Mahasiswa" asp-action="Edit" asp-route-nim="@mahasiswa.Nim">Edit</a>
              </td>
          </tr>
        }
    </tbody>
</table>

@{
}
@model Perkuliahan.Models.Entities.Mahasiswa

<div>Edit Mahasiswa</div>

@if (Model is null){
    <p>Nim Mahasiswa Tidak Ditemukan</p>
}else{
<form method="post">
    <div class="mt-3">
        <label class="form-label">Nim</label>
        <input type="text" class="form-control" asp-for="Nim" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Nama</label>
        <input type="text" class="form-control" asp-for="Nama_Mhs" />
    </div>

    <div class="mt-3">
        <label class="form-label">Tanggal Lahir</label>
        <input type="date" class="form-control" asp-for="Tgl_lahir" />
    </div>

    <div class="mt-3">
        <label class="form-label">Alamat</label>
        <textarea class="form-control" asp-for="Alamat"></textarea>
    </div>

    <div class="mt-3">
        @Html.LabelFor(model => model.Jenis_Kelamin, new { @class = "form-label" })
        @Html.DropDownListFor(model => model.Jenis_Kelamin, new List<SelectListItem>
        {
        new SelectListItem { Text = "Laki-Laki", Value = "LakiLaki" },
        new SelectListItem { Text = "Perempuan", Value = "Perempuan" }
        }, new { @class = "form-control" })
    </div>


    <div class="mt-3">
        <button class="btn btn-primary">Simpan</button>
        <button class="btn btn-outline-danger ms-3" asp-action="Delete" asp-controller="Mahasiswa">Hapus</button>
    </div>
</form>
}

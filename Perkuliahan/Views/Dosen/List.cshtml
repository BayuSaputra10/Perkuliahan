@{
}

@model PaginatedList<Perkuliahan.Models.Entities.Dosen>

<h1>Dosen</h1>
<div class="row">
    <div class="col-md-6">
        <form class="d-flex" asp-action="List" asp-controller="Dosen" method="get">
            <input name="cariString" class="form-control me-1" type="search" placeholder="Cari.." aria-label="Cari" />
            <button class="btn btn-dark" type="submit">Cari berdasar Nama</button>
        </form>
    </div>
    <div class="col-md-6">
        <a asp-action="List" class="text-dark">Lihat Semua</a>
    </div>
</div>
<div class="m-3">
    <a class="btn btn-outline-success ms-3" asp-action="Add" asp-controller="Dosen">Tambah Dosen</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Nip</th>
            <th>Nama</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dosen in Model)
        {
            <tr>
                <td>@dosen.Nip</td>
                <td>@dosen.Nama_Dosen</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Dosen" asp-action="Edit" asp-route-nim="@dosen.Nip">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisable = !Model.HasPreviousPage ? "disable" : "";
    var nextDisable = !Model.HasNextPage ? "disable" : "";
}
<a asp-action="List" asp-route-pageNumber="@(Model.PageIndex-1)" class="btn btn-default @prevDisable">Previous</a>
<a asp-action="List" asp-route-pageNumber="@(Model.PageIndex+1)" class="btn btn-default @nextDisable">Next</a>


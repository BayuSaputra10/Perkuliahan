@{
}
@model Perkuliahan.Models.Entities.Dosen

<div>Edit Dosen</div>

@if (Model is null)
{
    <p>Nip Dosen Tidak Ditemukan</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Nip</label>
            <input type="text" class="form-control" asp-for="Nip" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Nama</label>
            <input type="text" class="form-control" asp-for="Nama_Dosen" />
        </div>

        <div class="mt-3">
            <button class="btn btn-primary">Simpan</button>
            <button class="btn btn-outline-danger ms-3" asp-action="Delete" asp-controller="Dosen">Hapus</button>
        </div>
    </form>
}
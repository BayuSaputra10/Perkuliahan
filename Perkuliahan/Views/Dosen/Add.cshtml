@{
}
@model Perkuliahan.Models.AddDosenViewModel

<div>Menambahkan Dosen</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
<form method="post">
    <div class="mt-3">
        <label class="form-label">Nama</label>
        <input type="text" class="form-control" asp-for="Nama_Dosen" />
    </div>

    <div class="mt-3">
        <button class="btn btn-primary">Simpan</button>
    </div>
</form>
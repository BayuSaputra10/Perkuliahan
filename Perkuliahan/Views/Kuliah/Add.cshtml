@{
}

@model Perkuliahan.Models.AddKuliahViewModel

<h2>Menambahkan Kuliah</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@using (Html.BeginForm("Add", "Kuliah", FormMethod.Post))
{
    
    <div class="form-group">
        @Html.LabelFor(model => model.Nim)
        @Html.DropDownListFor(model => model.Nim, ViewBag.MahasiswaList as SelectList, "Pilih NIM", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Kode_MK)
        @Html.DropDownListFor(model => model.Kode_MK, ViewBag.MataKuliahList as SelectList, "Pilih Kode Mata Kuliah", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nip)
        @Html.DropDownListFor(model => model.Nip, ViewBag.DosenList as SelectList, "Pilih NIP Dosen", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nilai)
        @Html.TextBoxFor(model => model.Nilai, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Simpan</button>
    </div>
}
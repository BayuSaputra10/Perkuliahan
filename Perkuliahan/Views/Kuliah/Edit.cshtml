@{
}

@model Perkuliahan.Models.Entities.Kuliah

<div>Edit Dose</div>

@if (Model is null)
{
    <p>Nip Dosen Tidak Ditemukan</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="KuliahId" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Nim</label>
            <select class="form-control" asp-for="Nim">
                <option value="">Pilih Nim</option>
                @foreach (var item in ViewBag.MahasiswaList as IEnumerable<SelectListItem>)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>

        <div class="mt-3">
            <label class="form-label">Mata Kuliah</label>
            <select class="form-control" asp-for="Kode_MK">
                <option value="">Pilih Mk</option>
                @foreach (var item in ViewBag.MataKuliahList as IEnumerable<SelectListItem>)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>
        <div class="mt-3">
            <label class="form-label">Nip</label>
            <select class="form-control" asp-for="Nip">
                <option value="">Pilih Nip</option>
                @foreach (var item in ViewBag.DosenList as IEnumerable<SelectListItem>)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>

        <div class="mt-3">
            <label class="form-label">Nilai</label>
            <input type="text" class="form-control" asp-for="Nilai" />
        </div>

        <div class="mt-3">
            <button class="btn btn-primary">Simpan</button>
            <button class="btn btn-outline-danger ms-3" asp-action="Delete" asp-controller="Kuliah">Hapus</button>
        </div>
    </form>
}
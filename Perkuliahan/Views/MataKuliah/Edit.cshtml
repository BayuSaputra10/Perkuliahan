@{
}
@model Perkuliahan.Models.Entities.MataKuliah

<div>Edit Mata Kuliah</div>

@if (Model is null)
{
    <p>Kode Mata Kuliah Tidak Ditemukan</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Kode Mk</label>
            <input type="text" class="form-control" asp-for="Kode_MK" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Nama Mk</label>
            <input type="text" class="form-control" asp-for="Nama_MK"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Sks</label>
            <input type="text" class="form-control" asp-for="Sks" />
        </div>

        <div class="mt-3">
            <button class="btn btn-primary">Simpan</button>
            <button class="btn btn-outline-danger ms-3" asp-action="Delete" asp-controller="MataKuliah">Hapus</button>
        </div>
    </form>
}
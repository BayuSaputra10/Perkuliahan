@{
}
@model Perkuliahan.Models.AddMataKuliahViewModel

<div>Menambahkan Mata Kuliah</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
<form method="post">
    <div class="mt-3">
        <label class="form-label">Nama Mata Kuliah</label>
        <input type="text" class="form-control" asp-for="Nama_MK" />
    </div>

    <div class="mt-3">
        <label class="form-label">SKS</label>
        <input type="text" class="form-control" asp-for="Sks" />
    </div>

    <div class="mt-3">
        <button class="btn btn-primary">Simpan</button>
    </div>
</form>